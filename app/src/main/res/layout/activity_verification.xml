<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.VerificationActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dip"
        android:text="接码平台"
        android:gravity="center"
        android:textSize="30dip"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dip"
        >
        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout2"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/JM_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:hint="输入账号"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout"
            android:layout_width="313dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/JM_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="输入密码"
                android:inputType="textPassword"
                android:selectAllOnFocus="false"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
            android:gravity="center"
        android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/spinnerJM"
                android:layout_width="139dp"
                android:layout_height="46dp"
                android:entries="@array/JM"
                android:gravity="center_horizontal"
                android:spinnerMode="dialog" />

            <Button
                android:id="@+id/btnJMLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="登录" />
</LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dip"
        android:text="打码平台"
        android:gravity="center"
        android:textSize="30dip"
        />

    <LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
        android:layout_marginTop="10dip"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"

        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout4"
            android:layout_width="313dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
           >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/DM_username"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="输入账号"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout3"
            android:layout_width="313dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
           >

            <android.support.design.widget.TextInputEditText
                android:id="@+id/DM_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="输入密码"
                android:inputType="textPassword"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/spinnerDM"
            android:layout_width="139dp"
            android:layout_height="46dp"
            android:entries="@array/DM"
            android:spinnerMode="dialog"
            android:gravity="center"
            android:layout_gravity="center"
         />
        <Button
            android:id="@+id/btnDMLogin"
            android:layout_width="90dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="登录"
            />

    </LinearLayout>
</LinearLayout>




</LinearLayout>