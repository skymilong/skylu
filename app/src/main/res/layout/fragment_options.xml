<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.OptionsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        >

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dip"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="线程数"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/pro_num"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="1" />

        <TextView
            android:layout_width="wrap_content"
            android:text="项目编号"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/proj_id"
            android:layout_width="120dp"
            android:text="55848"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dip"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="用户名"
            android:layout_height="wrap_content"

            />

        <EditText
            android:id="@+id/reg_uname"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:hint="选填"
            android:text="skymilong11"
             />

        <TextView
            android:layout_width="wrap_content"
            android:text="用户密码"

            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/reg_pwd"
            android:layout_width="120dp"
            android:hint="选填"
            android:text="qq1314520"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10dip"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:text="邀请ID"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/invite_id"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="59953 " />

        <TextView
            android:layout_width="wrap_content"
            android:text="注册数量"
            android:layout_height="wrap_content"
            />

        <EditText
            android:id="@+id/reg_num"
            android:layout_width="120dp"
            android:text="10"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </LinearLayout>
<Button
    android:id="@+id/btn_save_option"
    android:layout_width="match_parent"
    android:text="OJBK"
    android:layout_height="wrap_content" />
</LinearLayout>